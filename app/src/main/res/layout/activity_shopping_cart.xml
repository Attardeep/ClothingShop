<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ShoppingCart">

    <TextView
        android:id="@+id/checkout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#FAEBD7"
        android:gravity="center_horizontal"
        android:text="Checkout ShoppingCart Item"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_shipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FFB6C1"
        android:text="Set Shipping Information" />

    <TextView
        android:background="#B0E0E6"
        android:id="@+id/textbefore"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="76dp"
        android:textSize="15sp"
        android:text="Total Amount Before Tax;"
        android:textStyle="bold" />

    <TextView
        android:background="#B0E0E6"
        android:textSize="15sp"
        android:id="@+id/texttax"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textbefore"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="49dp"
        android:text="Total Tax(TSP/TPS)Tax;"
        android:textStyle="bold" />

    <TextView
        android:background="#B0E0E6"
        android:textSize="15sp"
        android:id="@+id/texttotal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texttax"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="41dp"
        android:text="Total Amount After Tax;"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/countwithout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkout"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/textbefore"
        android:layout_toRightOf="@+id/textbefore"
        android:text="0" />

    <EditText
        android:id="@+id/counttax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countwithout"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/texttax"
        android:layout_toRightOf="@+id/texttax"
        android:text="0" />

    <EditText
        android:id="@+id/counttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/counttax"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/texttax"
        android:layout_toRightOf="@+id/texttax"
        android:text="0"
        android:inputType="number"
    />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="162dp"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="366dp"
        app:srcCompat="@drawable/shoppingbag" />

</RelativeLayout>